TOP_DIR=${TOP_DIR:-$(pwd)/../../..}
CONCUERROR=${CONCUERROR:-$TOP_DIR/bin/concuerror}
CONCUERROR_BEAM=${CONCUERROR_BEAM:-$TOP_DIR/_build/default/lib/concuerror/ebin}

Out=concuerror_report.txt
Console=console

rm -f $Out $Console

. ../print_colors

function abort {
    trap - ERR
    set +e
    echo ""
    echo cat $Out
    cat $Out
    echo cat $Console
    cat $Console
    print_red "FAILED"
    exit 1
}

function testing {
    echo -n "$1..."
}

function good {
    rm -rf $Out $Console
    print_ok
}

function print_ok {
    print_green "ok"
}

function mygrep {
    grep_this $Out $@
}

function mygrepconsole {
    grep_this $Console $@
}

function grep_this {
    File=$1
    shift
    grep -q "$1" $File
    Ret=$?
    if [ $Ret -eq 0 ]; then
       return 0
    else
       exit 1
    fi
}

function outputhas {
    print_ok
    testing "... and output has \"$1\""
    mygrep "$1"
    good
}

function concuerror_console {
    2> $Console $CONCUERROR $@
}

function concuerror_console_expect {
    Expect=$1
    shift
    trap - ERR
    2> $Console $CONCUERROR $@
    Ret=$?
    trap 'abort' ERR
    [ $Ret -eq $Expect ]
}

function concuerror_console_error {
    concuerror_console_expect 1 $@
}

function concuerror_console_fail {
    concuerror_console_expect 2 $@
}

function consolehas {
    print_ok
    testing "... and console has \"$1\""
    mygrepconsole "$1"
    good
}

trap 'abort' ERR
