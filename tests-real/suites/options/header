TOP_DIR=${TOP_DIR:-../../..}
CONCUERROR=${CONCUERROR:-$TOP_DIR/bin/concuerror}
CONCUERROR_BEAM=${CONCUERROR_BEAM:-$TOP_DIR/_build/default/lib/concuerror/ebin}

Out=concuerror_report.txt
Console=console

rm -f $Out $Console

. ../print_colors

function abort {
    trap - 0
    set +e
    echo ""
    echo cat $Out
    cat $Out
    echo cat $Console
    cat $Console
    print_red "FAILED"
}

function testing {
    echo -n "$1..."
}

function good {
    rm -rf $Out $Console
    print_ok
}

function print_ok {
    print_green "ok"
}

function mygrep {
    grep -q "$1" $Out
}

function mygrepconsole {
    grep -q "$1" $Console
}

function outputhas {
    print_ok
    testing "... and output has \"$1\""
    mygrep "$1"
    good
}

function concuerror_console {
    2> $Console $CONCUERROR $@
}

function consolehas {
    print_ok
    testing "... and console has \"$1\""
    mygrepconsole "$1"
    good
}

set -e
trap 'abort' 0
